<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MONEYXCHANGE</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>
<body>
    <section class="section">
        <div class="container">
            <h1 class="title">MONEYXCHANGE</h1>
            <h2 class="subtitle">Consulte su tipo de cambio de dólares americanos a euros.</h2>

            @if (User.Identity.IsAuthenticated)
            {
                <a class="is-size-5" asp-controller="account" asp-action="logout">Salir del sistema</a>
            }
        </div>
    </section>

    <div id="app">
        @RenderBody()
    </div>

    <footer class="section">
        <div class="container has-text-centered">
            <p><b>MONEYXCHANGE</b> - desarrollado por Eduardo Rodríguez Patiño.</p>
        </div>
    </footer>

    <script src="~/build/app.js" asp-append-version="true"></script>

    <script>
        // Initialize Components
        window.addEventListener('DOMContentLoaded', () => {
            new Vue({
                el: '#app',
                components: Components
            })
        })
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>